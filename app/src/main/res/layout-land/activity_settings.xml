<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/settingsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:paddingEnd="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingsDarkmodeCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/standardPadding"
                    android:layout_marginLeft="@dimen/standardPadding"
                    android:layout_marginTop="@dimen/cardMarginCombined"
                    android:layout_marginEnd="@dimen/standardPadding"
                    android:layout_marginRight="@dimen/standardPadding"
                    android:layout_marginBottom="@dimen/cardMarginBottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardCornerRadius="@dimen/cardCornerRadiusSmall"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:id="@+id/darkmodeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/settingsDarkmodeTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="@string/setting_darkmode_title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                        <TextView
                            android:id="@+id/settingsDarkmodeDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:paddingStart="8dp"
                            android:paddingLeft="8dp"
                            android:paddingEnd="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="8dp"
                            android:text="@string/setting_darkmode_description"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <Switch
                                android:id="@+id/followSystemSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:text="@string/setting_darkmode_follow_system"
                                />

                            <Button
                                android:id="@+id/settingsDarkmodeButton"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:backgroundTint="@color/colorAccent"
                                android:text="@string/setting_enable"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingsUnitsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/standardPadding"
                    android:layout_marginLeft="@dimen/standardPadding"
                    android:layout_marginTop="@dimen/cardMarginTop"
                    android:layout_marginEnd="@dimen/standardPadding"
                    android:layout_marginRight="@dimen/standardPadding"
                    android:layout_marginBottom="@dimen/cardMarginBottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardCornerRadius="@dimen/cardCornerRadiusSmall"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:id="@+id/settingsUnitsCardLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/settingsUnitsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="@string/setting_units_title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/settingsUnitsApertureTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="@string/setting_units_aperture_short"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                            <Button
                                android:id="@+id/settingsUnitsApertureButton"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:backgroundTint="@color/colorAccent"
                                android:text="@string/setting_change"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/settingsUnitsDistanceTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="@string/setting_units_distance"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                            <Button
                                android:id="@+id/settingsUnitsDistanceButton"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:backgroundTint="@color/colorAccent"
                                android:text="@string/setting_change"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/settingsUnitsNdTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:text="@string/setting_units_nd"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                            <Button
                                android:id="@+id/settingsUnitsNdButton"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:backgroundTint="@color/colorAccent"
                                android:text="@string/setting_change"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingsCamerasCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/standardPadding"
                    android:layout_marginLeft="@dimen/standardPadding"
                    android:layout_marginTop="@dimen/cardMarginCombined"
                    android:layout_marginEnd="@dimen/standardPadding"
                    android:layout_marginRight="@dimen/standardPadding"
                    android:layout_marginBottom="@dimen/cardMarginBottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardCornerRadius="@dimen/cardCornerRadiusSmall"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:id="@+id/settingsCamerasCardLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/settingsCamerasTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="@string/setting_cameras_title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                        <TextView
                            android:id="@+id/settingsCamerasDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:paddingStart="8dp"
                            android:paddingLeft="8dp"
                            android:paddingEnd="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="8dp"
                            android:text="@string/setting_cameras_description"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/settingsCamerasButton"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:backgroundTint="@color/colorAccent"
                                android:text="@string/setting_cameras_edit"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingsFeedbackCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/standardPadding"
                    android:layout_marginLeft="@dimen/standardPadding"
                    android:layout_marginTop="@dimen/cardMarginTop"
                    android:layout_marginEnd="@dimen/standardPadding"
                    android:layout_marginRight="@dimen/standardPadding"
                    android:layout_marginBottom="@dimen/cardMarginBottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardCornerRadius="@dimen/cardCornerRadiusSmall"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:id="@+id/settingsFeedbackCardLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/settingsFeedbackTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="@string/feedback_title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                        <TextView
                            android:id="@+id/settingsFeedbackDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:paddingStart="8dp"
                            android:paddingLeft="8dp"
                            android:paddingEnd="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="8dp"
                            android:text="@string/feedback_description"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/settingsFeedbackButton"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:backgroundTint="@color/colorAccent"
                                android:text="@string/feedback_action"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>