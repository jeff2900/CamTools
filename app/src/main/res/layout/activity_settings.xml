<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/settingsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/settingsDarkmodeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginBottom"
                android:layout_marginEnd="@dimen/standardPadding"
                android:layout_marginLeft="@dimen/standardPadding"
                android:layout_marginRight="@dimen/standardPadding"
                android:layout_marginStart="@dimen/standardPadding"
                android:layout_marginTop="@dimen/cardMarginCombined"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="@dimen/cardCornerRadiusSmall"
                app:cardElevation="@dimen/cardElevation"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:id="@+id/darkmodeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/settingsDarkmodeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="@string/setting_darkmode_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                    <TextView
                        android:id="@+id/settingsDarkmodeDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:paddingBottom="8dp"
                        android:paddingEnd="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingStart="8dp"
                        android:text="@string/setting_darkmode_description"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/settingsDarkmodeButton"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:backgroundTint="@color/colorAccent"
                            android:text="@string/setting_enable"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/settingsCamerasCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginBottom"
                android:layout_marginEnd="@dimen/standardPadding"
                android:layout_marginLeft="@dimen/standardPadding"
                android:layout_marginRight="@dimen/standardPadding"
                android:layout_marginStart="@dimen/standardPadding"
                android:layout_marginTop="@dimen/cardMarginTop"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="@dimen/cardCornerRadiusSmall"
                app:cardElevation="@dimen/cardElevation"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:id="@+id/settingsCamerasCardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/settingsCamerasTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="@string/setting_cameras_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                    <TextView
                        android:id="@+id/settingsCamerasDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:paddingBottom="8dp"
                        android:paddingEnd="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingStart="8dp"
                        android:text="@string/setting_cameras_description"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/settingsCamerasButton"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:backgroundTint="@color/colorAccent"
                            android:text="@string/setting_cameras_edit"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/settingsUnitsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginBottom"
                android:layout_marginEnd="@dimen/standardPadding"
                android:layout_marginLeft="@dimen/standardPadding"
                android:layout_marginRight="@dimen/standardPadding"
                android:layout_marginStart="@dimen/standardPadding"
                android:layout_marginTop="@dimen/cardMarginTop"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="@dimen/cardCornerRadiusSmall"
                app:cardElevation="@dimen/cardElevation"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:id="@+id/settingsUnitsCardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/settingsUnitsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="@string/setting_units_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/settingsUnitsApertureTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="@string/setting_units_aperture_short"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                        <Button
                            android:id="@+id/settingsUnitsApertureButton"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:backgroundTint="@color/colorAccent"
                            android:text="@string/setting_change"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/settingsUnitsDistanceTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="@string/setting_units_distance"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                        <Button
                            android:id="@+id/settingsUnitsDistanceButton"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:backgroundTint="@color/colorAccent"
                            android:text="@string/setting_change"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/settingsUnitsNdTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="@string/setting_units_nd"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                        <Button
                            android:id="@+id/settingsUnitsNdButton"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:backgroundTint="@color/colorAccent"
                            android:text="@string/setting_change"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/settingsFeedbackCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginBottom"
                android:layout_marginEnd="@dimen/standardPadding"
                android:layout_marginLeft="@dimen/standardPadding"
                android:layout_marginRight="@dimen/standardPadding"
                android:layout_marginStart="@dimen/standardPadding"
                android:layout_marginTop="@dimen/cardMarginTop"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="@dimen/cardCornerRadiusSmall"
                app:cardElevation="@dimen/cardElevation"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:id="@+id/settingsFeedbackCardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/settingsFeedbackTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="@string/feedback_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

                    <TextView
                        android:id="@+id/settingsFeedbackDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:paddingBottom="8dp"
                        android:paddingEnd="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingStart="8dp"
                        android:text="@string/feedback_description"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/settingsFeedbackButton"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:backgroundTint="@color/colorAccent"
                            android:text="@string/feedback_action"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/appearanceCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/cardMarginBottom"
                android:layout_marginEnd="@dimen/standardPadding"
                android:layout_marginLeft="@dimen/standardPadding"
                android:layout_marginRight="@dimen/standardPadding"
                android:layout_marginStart="@dimen/standardPadding"
                android:layout_marginTop="@dimen/cardMarginTop"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                app:cardElevation="@dimen/cardElevation">

                <LinearLayout
                    android:id="@+id/appearanceFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/appearanceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/appearanceSymbol"
                            android:layout_width="64dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:tint="@color/text_main_light"
                            app:srcCompat="@drawable/ic_appearance_black_24dp"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            android:id="@+id/appearanceTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingEnd="16dp"
                            android:paddingStart="16dp"
                            android:text="@string/appearance_appearance"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@color/text_main_light"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/colorLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:longClickable="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/colorSymbol"
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:tint="@color/text_sub_light"
                            app:srcCompat="@drawable/ic_color_black_24dp"
                            tools:ignore="ContentDescription"/>

                        <Switch
                            android:id="@+id/colorSwitch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:focusable="false"
                            android:paddingStart="16dp"
                            android:text="@string/appearance_color"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/text_sub_light"
                            tools:ignore="RtlSymmetry"/>

                    </LinearLayout>

                    <com.github.aakira.expandablelayout.ExpandableLinearLayout
                        android:id="@+id/expandableAppearanceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:ael_duration="400"
                        app:ael_interpolator="fastOutSlowIn"
                        app:ael_orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/navbarLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:longClickable="true"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/navbarSymbol"
                                    android:layout_width="56dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:tint="@color/text_sub_light"
                                    app:srcCompat="@drawable/ic_navbar_black_24dp"
                                    tools:ignore="ContentDescription"/>

                                <Switch
                                    android:id="@+id/navbarSwitch"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:paddingStart="16dp"
                                    android:text="@string/appearance_navbar"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/text_sub_light"
                                    tools:ignore="RtlSymmetry"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/labelsLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:longClickable="true"
                                android:orientation="horizontal"
                                android:padding="8dp">

                                <ImageView
                                    android:id="@+id/labelsSymbol"
                                    android:layout_width="56dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:tint="@color/text_sub_light"
                                    app:srcCompat="@drawable/ic_labels_black_24dp"
                                    tools:ignore="ContentDescription"/>

                                <Switch
                                    android:id="@+id/labelsSwitch"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:paddingStart="16dp"
                                    android:text="@string/appearance_labels"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/text_sub_light"
                                    tools:ignore="RtlSymmetry"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/singlehandLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:longClickable="true"
                                android:orientation="horizontal"
                                android:padding="8dp">

                                <ImageView
                                    android:id="@+id/singlehandSymbol"
                                    android:layout_width="56dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:tint="@color/text_sub_light"
                                    app:srcCompat="@drawable/ic_singlehanded_black_24dp"
                                    tools:ignore="ContentDescription"/>

                                <Switch
                                    android:id="@+id/singlehandSwitch"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:paddingStart="16dp"
                                    android:text="@string/appearance_singlehand"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/text_sub_light"
                                    tools:ignore="RtlSymmetry"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/swipeLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:longClickable="true"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/swipeSymbol"
                                    android:layout_width="56dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:tint="@color/text_sub_light"
                                    app:srcCompat="@drawable/ic_swipe_black_24dp"
                                    tools:ignore="ContentDescription"/>

                                <Switch
                                    android:id="@+id/swipeSwitch"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:paddingStart="16dp"
                                    android:text="@string/appearance_swipe"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/text_sub_light"
                                    tools:ignore="RtlSymmetry"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/saveLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:longClickable="true"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/saveSymbol"
                                    android:layout_width="56dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:tint="@color/text_sub_light"
                                    app:srcCompat="@drawable/ic_save_black_24dp"
                                    tools:ignore="ContentDescription"/>

                                <Switch
                                    android:id="@+id/saveSwitch"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:paddingStart="16dp"
                                    android:text="@string/appearance_save"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/text_sub_light"
                                    tools:ignore="RtlSymmetry"/>

                            </LinearLayout>


                        </LinearLayout>

                    </com.github.aakira.expandablelayout.ExpandableLinearLayout>

                    <LinearLayout
                        android:id="@+id/expandAppearanceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/expandAppearanceSymbol"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:tint="@color/text_sub_light"
                            app:srcCompat="@drawable/avd_expand"
                            tools:ignore="ContentDescription"/>


                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/aboutCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/cardMarginBottom"
                android:layout_marginEnd="@dimen/standardPadding"
                android:layout_marginLeft="@dimen/standardPadding"
                android:layout_marginRight="@dimen/standardPadding"
                android:layout_marginStart="@dimen/standardPadding"
                android:layout_marginTop="@dimen/cardMarginTop"
                android:background="#FFFFFF"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                app:cardElevation="@dimen/cardElevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/aboutLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/aboutSymbol"
                            android:layout_width="64dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:tint="@color/text_main_light"
                            app:srcCompat="@drawable/ic_more_black_24dp"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            android:id="@+id/aboutTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingEnd="16dp"
                            android:paddingStart="16dp"
                            android:text="@string/about_about"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@color/text_main_light"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/rateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:longClickable="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/rateSymbol"
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:tint="@color/text_sub_light"
                            app:srcCompat="@drawable/ic_rate_black_24dp"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            android:id="@+id/rateTextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
